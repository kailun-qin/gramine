# Python3 manifest example

loader.preload = "file:{{ gramine.libos }}" # for compatibility with v1.0

loader.entrypoint = "file:{{ gramine.libos }}"
libos.entrypoint = "{{ entrypoint }}"

loader.log_level = "{{ log_level }}"

loader.env.LD_LIBRARY_PATH = "{{ python.stdlib }}/lib:/lib:{{ arch_libdir }}:/usr/lib:/usr/{{ arch_libdir }}"

loader.insecure__use_cmdline_argv = true

sys.enable_sigterm_injection = true

fs.mount = [
  {
    type = "chroot",
    path = "/lib",
    uri = "file:{{ gramine.runtimedir() }}"
  },
  {
    type = "chroot",
    path = "{{ arch_libdir }}",
    uri = "file:{{ arch_libdir }}"
  },
  {
    type = "chroot",
    path = "/usr",
    uri = "file:/usr"
  },
  {
    type = "chroot",
    path = "{{ python.stdlib }}",
    uri = "file:{{ python.stdlib }}"
  },
  {
    type = "chroot",
    path = "{{ python.distlib }}",
    uri = "file:{{ python.distlib }}"
  },
  {
    type = "chroot",
    path = "/tmp",
    uri = "file:/tmp"
  },
  {
    type = "chroot",
    path = "/etc",
    uri = "file:/etc"
  },
]

sgx.debug = true
sgx.nonpie_binary = true
sgx.enclave_size = "512M"
sys.stack.size = "2M"
sgx.thread_num = 32

sgx.trusted_files = [
  "file:{{ gramine.libos }}",
  "file:{{ entrypoint }}",
  "file:{{ gramine.runtimedir() }}/",
  "file:{{ arch_libdir }}/",
  "file:/usr/{{ arch_libdir }}/",
  "file:{{ python.stdlib }}/",
  "file:{{ python.distlib }}/",
  "file:scripts/",
  "file:/etc/mime.types",
  "file:/etc/default/apport",
]

sgx.allowed_files = [
  "file:/etc/nsswitch.conf",
  "file:/etc/ethers",
  "file:/etc/hosts",
  "file:/etc/group",
  "file:/etc/passwd",
  "file:/etc/gai.conf",
  "file:/etc/host.conf",
  "file:/etc/resolv.conf",
  "file:/tmp",
]
